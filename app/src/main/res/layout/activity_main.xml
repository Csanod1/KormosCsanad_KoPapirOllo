<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="center_horizontal"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/imageViewJatekosKo"
            android:src="@drawable/rock"
            android:visibility="visible"
            android:layout_width="150dp"
            android:layout_height="150dp"/>
        <ImageView
            android:id="@+id/imageViewJatekosPapir"
            android:src="@drawable/paper"
            android:visibility="gone"
            android:layout_width="150dp"
            android:layout_height="150dp"/>
        <ImageView
            android:id="@+id/imageViewJatekosOllo"
            android:src="@drawable/scissors"
            android:visibility="gone"
            android:layout_width="150dp"
            android:layout_height="150dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="A te választásod"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/grey"/>

        <ImageView
            android:id="@+id/imageViewGepKo"
            android:src="@drawable/rock"
            android:visibility="visible"
            android:layout_width="150dp"
            android:layout_height="150dp"/>
        <ImageView
            android:id="@+id/imageViewGepPapir"
            android:src="@drawable/paper"
            android:visibility="gone"
            android:layout_width="150dp"
            android:layout_height="150dp"/>
        <ImageView
            android:id="@+id/imageViewGepOllo"
            android:src="@drawable/scissors"
            android:visibility="gone"
            android:layout_width="150dp"
            android:layout_height="150dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A gép választása"
            android:textSize="30dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/grey"/>
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Eredmény: Ember: "
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="@color/grey"/>
            <TextView
                android:id="@+id/textViewEmberGyozelem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="@color/grey"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" computer: "
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="@color/grey"/>

            <TextView
                android:id="@+id/textViewGepGyozelem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20dp"
                android:textColor="@color/grey"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            >

            <Button
                android:id="@+id/btnKo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:text="KŐ"
                android:textColor="@color/black"/>
            <Button
                android:id="@+id/btnPapir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:text="PAPÍR"
                android:textColor="@color/black"/>
            <Button

                android:id="@+id/btnOllo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:text="OLLÓ"
                android:textColor="@color/black"/>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>